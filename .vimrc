set encoding=utf-8

" Enable syntax highlighting
syntax on  

" Display line numbers
set number
set ruler

" Disable swap files
set noswapfile

" Disable automatic newline at end of file
set nofixendofline

" Indenting
set autoindent
set tabstop=4
set smartindent
set cindent

" OSX stupid backspace fix
set backspace=indent,eol,start
